import sys
from Perroquet.perroquet import Perroquet

def main():
    try:
        from Perroquet import config
        datadir = config.pkgdatadir
        version = config.VERSION
    except:
        datadir = '.'
        version = '0.9'
    app = Perroquet(datadir, version, sys.argv)
    app.run()

if __name__ == '__main__':
    main()

